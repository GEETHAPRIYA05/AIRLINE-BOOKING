    <script>
      const currencySelector = document.getElementById('currencySelector');
      const currencyDropdown = document.getElementById('currencyDropdown');
      const languageSelector = document.getElementById('languageSelector');
      const languageDropdown = document.getElementById('languageDropdown');
      const supportSelector = document.getElementById('supportSelector');
      const supportDropdown = document.getElementById('supportDropdown');
      const loginSelector = document.getElementById('loginSelector');
      const loginDropdown = document.getElementById('loginDropdown');
  
  
      currencySelector.addEventListener('click', () => {
        currencyDropdown.style.display = currencyDropdown.style.display === 'block' ? 'none' : 'block';
      });
  
      languageSelector.addEventListener('click', () => {
        languageDropdown.style.display = languageDropdown.style.display === 'block' ? 'none' : 'block';
      });
      supportSelector.addEventListener('click', () => {
        supportDropdown.style.display = supportDropdown.style.display === 'block' ? 'none' : 'block';
      });
      loginSelector.addEventListener('click', () => {
        loginDropdown.style.display = loginDropdown.style.display === 'block' ? 'none' : 'block';
      });
      
  
      window.addEventListener('click', (e) => {
        if (!currencySelector.contains(e.target)) {
          currencyDropdown.style.display = 'none';
        }
        if (!languageSelector.contains(e.target)) {
          languageDropdown.style.display = 'none';
        }
        if (!supportSelector.contains(e.target)) {
          supportDropdown.style.display = 'none';
        }
        if (!loginSelector.contains(e.target)) {
          loginDropdown.style.display = 'none';
        }
       
      });
    </script>
</div>
</div>
  
