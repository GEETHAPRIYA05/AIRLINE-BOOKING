  <script>
    const toggleDropdown = (selectorId, dropdownId) => {
      const selector = document.getElementById(selectorId);
      const dropdown = document.getElementById(dropdownId);
  
      selector.addEventListener('click', () => {
        dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
      });
  
      window.addEventListener('click', (e) => {
        if (!selector.contains(e.target)) {
          dropdown.style.display = 'none';
        }
      });
    };
  
    toggleDropdown('currencySelector', 'currencyDropdown');
    toggleDropdown('languageSelector', 'languageDropdown');
    toggleDropdown('supportSelector', 'supportDropdown');
    toggleDropdown('loginSelector', 'loginDropdown');
  </script>
